<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Menu.FindFriends.ProfileActivity">

    <!--TODO: Add some sort of wave background at the top, and also the back button-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile_user_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/user_default_profile_pic"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp" />


    <TextView
        android:id="@+id/tv_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Username"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_profile_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status which is long"
        android:textSize="16sp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btn_send_message_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/profile_buttons_end"
        android:drawableStart="@drawable/ic_send_message"
        android:drawablePadding="18dp"
        android:drawableTint="@color/colorPrimary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/send_message"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="18sp" />
    <Button
        android:id="@+id/btn_decline_message_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profile_buttons_end"
        android:drawableStart="@drawable/ic_ban"
        android:drawablePadding="18dp"
        android:drawableTint="@color/colorPrimary"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="@string/decline_chat_request"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/grey"
        android:textSize="18sp"
        android:visibility="invisible"/>

</LinearLayout>