<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:background="@color/white"
    android:padding="8dp">


    <FrameLayout
        android:id="@+id/flProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_display_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/user_default_profile_pic"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="1dp" />
        <!--        #72b043-->


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_display_online"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/circle_solid"
            android:visibility="invisible" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_display_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="130dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_display_user_status"
            android:layout_width="wrap_content"
            android:maxWidth="130dp"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_accept_decline_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/btn_request_accept"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:background="@drawable/bg_button_next"
            android:text="@string/accept"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_request_decline"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginStart="8dp"
            android:background="@drawable/bg_button_test"
            android:text="@string/decline"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp" />

    </LinearLayout>


    <!--    TODO: Add a line at the bottom using View-->


</LinearLayout>