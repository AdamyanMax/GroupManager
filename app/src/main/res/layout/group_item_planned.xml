<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvGroupProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/ivGroupImage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/cd_group_profile_image"
            android:scaleType="centerInside"
            android:src="@drawable/user_group" />

    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tvGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/cvGroupProfile"
        android:textColor="@color/black"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvTime"
        android:text=""
        android:layout_toEndOf="@id/tvGroupName"
        android:textAlignment="textEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvLastMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGroupName"
        android:layout_marginStart="12dp"
        android:text=""
        android:layout_toEndOf="@+id/cvGroupProfile"
        android:textSize="15sp" />



</RelativeLayout>