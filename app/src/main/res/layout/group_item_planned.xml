<?xml version="1.0" encoding="utf-8"?>
<!-- Currently not in use.-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/white"
    android:paddingStart="12dp"
    android:paddingTop="12dp"
    android:paddingEnd="12dp"
    android:paddingBottom="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/___"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        app:cardCornerRadius="60dp">

        <ImageView
            android:id="@+id/__"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/cd_group_profile_image"
            android:scaleType="centerInside"
            android:src="@drawable/user_group" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_display_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/___"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/tv_display_username"
        android:text="10:24am"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_username"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/___"
        android:text="Last message"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />


</RelativeLayout>