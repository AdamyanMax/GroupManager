<resources>
    <!-- Base application theme. -->
    <style name="Theme.Manage" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_teal</item>

        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <!--That cursor thingy-->
        <item name="android:colorControlActivated">@color/colorPrimaryDark</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="fontFamily">@font/opensans</item>

        <item name="android:popupMenuStyle">@style/MyPopupMenuStyle</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MyCustomTabLayout" parent="@style/Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextColor">@color/colorAccent</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="TabText" parent="@style/Widget.AppCompat.TextView">
        <!--        TODO: Make this attribute responsive-->
        <item name="android:textSize">15sp</item>
    </style>

    <style name="MyPopupMenuStyle" parent="@style/Widget.Material3.PopupMenu">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

</resources>